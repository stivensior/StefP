public class FirstLastDigitSum {
    public static int sumFirstAndLastDigit (int number){
     if(number < 0){
         return -1;
     }
     int value = 0;
     int lastDigit = number % 10;
     int Digit = 0;
        while (number > 0){
         Digit = number % 10;
         number = number /10;
     }
        value = lastDigit + Digit;
        return value;
    }
}
